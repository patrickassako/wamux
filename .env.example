# ============================================
# WhatsApp API Gateway - Environment Variables
# ============================================

# ----------------
# API Service (Python/FastAPI)
# ----------------
API_HOST=0.0.0.0
API_PORT=8000
API_ENV=development

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# API Keys
API_KEY_SALT=your-api-key-salt-change-this

# ----------------
# Engine Service (Node.js/Baileys)
# ----------------
ENGINE_ENV=development
ENGINE_LOG_LEVEL=info

# Redis (same as API)
ENGINE_REDIS_HOST=redis
ENGINE_REDIS_PORT=6379
ENGINE_REDIS_PASSWORD=
ENGINE_REDIS_DB=0

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=/app/sessions
WHATSAPP_MAX_RECONNECT_ATTEMPTS=5
WHATSAPP_RECONNECT_INTERVAL_MS=3000

# ----------------
# Stripe (Billing)
# ----------------
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# ----------------
# Application Settings
# ----------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Webhooks
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_MAX_RETRIES=3

# ----------------
# Development Only
# ----------------
DEBUG=true
LOG_LEVEL=debug
