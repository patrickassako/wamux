{
    "name": "whatsappapi-engine",
    "version": "0.1.0",
    "description": "WhatsApp API Gateway - Baileys Engine Service",
    "type": "module",
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "dev": "tsx watch --env-file=../../.env src/main.ts",
        "build": "tsc",
        "start": "node dist/main.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "generate:types": "datamodel-code-generator --input ../api/src/models --output src/generated/types.ts"
    },
    "dependencies": {
        "@hapi/boom": "^10.0.0",
        "@supabase/supabase-js": "^2.90.1",
        "@whiskeysockets/baileys": "^6.0.0",
        "ioredis": "^5.3.0",
        "pino": "^9.0.0",
        "pino-pretty": "^11.0.0",
        "qrcode": "^1.5.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/qrcode": "^1.5.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vitest/coverage-v8": "^2.0.0",
        "eslint": "^8.57.0",
        "prettier": "^3.3.0",
        "tsx": "^4.7.0",
        "typescript": "^5.5.0",
        "vitest": "^2.0.0"
    }
}